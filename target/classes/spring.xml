<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <bean id="simplecalc" class="SimpleCalc"/>

    <bean id="calccomponentmanager" class="CalcComponentManager"/>

    <bean id="jtextfield" class="javax.swing.JTextField">
        <constructor-arg value="0"/>
    </bean>

    <bean id="jbutton" class="javax.swing.JButton" scope="prototype"/>

    <bean id="calckeylistener" class="CalcKeyListener"/>

    <bean id="calcactionlistener" class="CalcActionListener" scope="prototype"/>

    <bean id="calclogic" class="CalcLogic"/>


</beans>